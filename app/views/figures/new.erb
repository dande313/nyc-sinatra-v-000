<h1>New Figure</h1>
<form action='/figures' method="post">
  <input type="text" name="figure[name]" id="figure_name">
  <br></br>

  <label>Associated Landmarks:</label>
  <br></br>
  <%Landmark.all.each do |landmark| %>
  <ul>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>">
    <%= landmark.name %>
  </ul>
  <% end %>
  <br></br>

  <label>New Landmark:</label>
  <br></br>
  <input type="text" name="landmark[name]" id="new_landmark" placeholder="New Landmark">
  <br></br>

  <label>Associated Titles:</label>
  <br></br>
  <%Title.all.each do |title| %>
  <ul>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>">
    <%= title.name %>
  </ul>
  <% end %>
  <br></br>

  <label>New Titles:</label>
  <br></br>
  <input type="text" name="title[name]" id="new_title">
  <br></br>

  <input type="submit" value="Create New Figure">
  </form>
